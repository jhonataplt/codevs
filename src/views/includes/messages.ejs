<% if (errors.length > 0) { %>
  <div class="w-full flex justify-center items-center">
    <div class="w-5/6 bg-red-300 border-2 border-red-500 text-gray-800 text-md rounded-md flex justify-center items-center p-2">
      <% errors.forEach(error => { %>
      <%= error %><br>
      <% }); %>
    </div>
  </div>
<% } %>

<% if (success.length > 0) { %>
  <div class="w-full flex justify-center items-center">
    <div class="w-5/6 bg-green-300 border-2 border-green-500 text-gray-800 text-md rounded-md flex justify-center items-center p-2">
      <% success.forEach(success => { %>
      <%=success %><br>
      <% }); %>
    </div>
  </div>
<% } %>